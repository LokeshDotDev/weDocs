NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/express_template"

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
BCRYPT_ROUNDS=12

# Basic Auth (for admin endpoints)
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=secure-admin-password

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Humanizer (DOCX pipeline)
DOCX_HUMANIZER_SCRIPT=../ai-detector-and-humanizer/humanizer/docx_humanize_lxml.py
DOCX_HUMANIZER_PYTHON=python
DOCX_HUMANIZER_SKIP_DETECT=1
HUMANIZER_API_URL=http://localhost:8000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_PRETTY=true
